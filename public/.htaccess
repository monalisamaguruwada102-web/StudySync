<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /study/
  
  # If requested file or directory exists, serve it
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # All other requests redirect to index.html (absolute fallback)
  RewriteRule . /study/index.html [L]
</IfModule>
